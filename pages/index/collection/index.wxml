<view class="header-content">
    <view class="header-map">
        <icon class="search-icon-map" size="15" type="search"></icon>
        <input bindinput="searchValueInput" class="search-hint-map" placeholder="请输入搜索内容" value="{{searchValue}}">{{searchRes}}</input>
    </view>
</view>
<block wx:if="{{!nonearsite}}">
    <view bindtap="navTositedetail" class="{{item.status==1?'manager':'offlinemanager'}} " data-avaliable="{{item.avaliable}}" data-distance="{{item.distance}}" data-needforge="{{item.needforge}}" data-offlineCharge="{{item.offlineCharge}}" data-pileNo="{{item.pileNo}}" data-siteid="{{item.id}}" data-status="{{item.status}}" wx:for="{{nearSiteList}}" wx:key="id">
        <view class="manager-wrapper">
            <view class="top">
                <view class="area">
                    <view class="name">{{item.siteName}} </view>
                    <view class="wenfather">
                        <text class="wen">桩号</text>{{item.pileNo}}</view>
                </view>
                <view catchtap="collecteBtn" class="distancefather" data-chargePileId="{{item.chargePileId}}">
                    <view class="rg-child">
                        <view id="mjltest">
                            <image src="{{item.status==1?'../../../icons/icon-comment-click2x.png':'../../../icons/icon-myfavorite-click-off-line2x.png'}}"></image>
                            <view class="distance">收藏</view>
                        </view>
                    </view>
                </view>
                <view catchtap="navToSite" class="distancefather" data-siteinfo="{{item}}">
                    <view class="rg-child">
                        <view id="mjltest">
                            <image src="{{item.status==1?'http://charge-pile.oss-cn-hangzhou.aliyuncs.com/icon/navarrow.png':'http://charge-pile.oss-cn-hangzhou.aliyuncs.com/icon/offlinenavarrow.png'}}"></image>
                            <view class="distance"> {{item.distance}}</view>
                        </view>
                    </view>
                </view>
            </view>
            <view class="location">
                <text class="add">地址</text>{{item.address}}</view>
            <view class="bot">
                <view class="pile-status">
                    <text class="kongxian">
                        <text></text> 空闲{{item.avaliable}} 个
          </text>
                    <text class="zaichong">
                        <text></text> 共{{item.total}}个
          </text>
                    <block wx:if="{{isShowPrice}}">
                        <text class="pricestyle" wx:if="{{item.feeType==1}}">
              {{item.price/100}} 元/时
            </text>
                        <text class="pricestyle" wx:elif="{{item.feeType==2}}">
              {{item.price/100}} 元/千瓦时
            </text>
                        <text class="pricestyle" wx:else>{{item.price}}</text>
                    </block>
                </view>
                <image class="vehicle-img" src="http://charge-pile.oss-cn-hangzhou.aliyuncs.com/icon/{{item.vehicleType==1?'icon_biaoqian_diandongche':'icon_biaoqian_qiche'}}.png" wx:if="{{showEV}}"></image>
                <view style="flex:0 0 {{item.activewidth+'px'}};text-align:center;">
                    <view class="xinhao">
                        <view class="signalbgc{{item.signal}}"></view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="tips1">
        <view class="refresh-block" wx:if="{{loading}}">
            <image animation="{{refreshAnimation}}" class="loadpng" src="http://charge-pile.oss-cn-hangzhou.aliyuncs.com/icon/loader.png"></image>
        </view>
        <view class="nocontent" wx:if="{{hasMore}}">
            <text>没有更多内容了</text>
        </view>
    </view>
</block>
<view wx:if="{{nonearsite}}">
    <image src="http://charge-pile.oss-cn-hangzhou.aliyuncs.com/icon/%E5%85%85%E7%94%B5%E8%AE%B0%E5%BD%95.png" style="width:467rpx;height:346rpx;margin:100rpx auto 70rpx auto;display:block; "></image>
    <view style="text-align:center;color:#3dca76;font-size:32rpx;">暂无收藏，快去收藏吧</view>
</view>
