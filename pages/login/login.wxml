<view class="register">
  <view class="info">
    <view class="item">
      <input bindinput="bindName" class="tel-input" placeholder="用户名" value="{{userName}}"></input>
    </view>
    <view class="item">
      <input bindinput="bindPassword" class="tel-input" placeholder="密码" value="{{password}}"></input>
    </view>
  </view>

    <view class="fixed">
    <button bindtap="login" class="sendregister">登录</button>
    <button bindtap="registered" class="sendregister">去注册</button>
  </view>
</view>