<view class="pilepoint">
    <label class="pilepoint-label">桩点编号</label>
    <view class="pilepointWrapper">
        <input bindinput="getPileNum" class="pilepoint-input" disabled="{{disabledPileNumInput}}" name="gatewayNo" placeholder="请输入桩点编号" placeholderClass="input-placeholder" type="number" value="{{pileNum}}"></input>
    </view>
    <label bindtap="getPileNumScan" class="newPointSao">
        <image class="newPointSaoPic" src="http://charge-pile.oss-cn-hangzhou.aliyuncs.com/icon/newPointSao@3x.png"></image>
    </label>
</view>
<view class="detailContent">
    <textarea bindinput="feedbackContent" class="detailContentText" maxlength="200" placeholder="请对该问题补充描述，以使我们提供更好的帮助"></textarea>
</view>
<view class="addPictureTitle">上传相关图片<text style="color:#999;">(最多上传4张)</text>
</view>
<view class="haschoosedImg">
    <view wx:for="{{chooseImgList}}" wx:key="index">
        <image bindtap="previewImg" class="imgItem" data-index="{{index}}" src="{{item}}"></image>
    </view>
</view>
<view class="addPicture" hidden="{{isShowAddImg}}">
    <image bindtap="chooseImg" src="https://charge-pile.oss-cn-hangzhou.aliyuncs.com/icon/btn_addpicture.png"></image>
</view>
<view bindtap="submitBtn" class="subButton {{noClick==true?'no-click':''}}">提交</view>
