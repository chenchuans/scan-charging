/* pages/userRecord.wxss */
.list {
  box-sizing: border-box;
  background-color: #f5f5f5;
  padding: 30rpx;
  width: 100%;
  height: 100vh;
  font-size: 26rpx;
  line-height: 36rpx;
  overflow: scroll;
}
.item{
  border-radius: 16rpx;
  background: #fff;
  box-shadow: 0 4rpx 30rpx rgba(0, 0, 0, .1);
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
  margin-bottom: 20rpx;
}
.item .floor{
  width: 100%;
  box-sizing:border-box;
  padding: 0 10rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.desc {
  text-indent: 40rpx;
  font-size: 26rpx;
  line-height: 48rpx;
}